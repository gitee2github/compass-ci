#!/bin/bash

CONTAINER_PATH="$CCI_SRC/container"

build_depends()
{
        local container=$1
        [ -f "$container/depends" ] && {
                for line in $(<$container/depends)
                do
                        build_depends $CONTAINER_PATH/$line
                done
        }
	do_one $container &
}

do_one()
{
	local container=$1
	local container_name=$(basename $container)
	lockfile-create -q --use-pid --retry 10 --lock-name "$container_name".lock
	mkdir $tmpdir/$container_name 2>/dev/null &&
	(
		cd $container
		[ -x build ] && ./build
		[ -x install ] && ./install
		[ -x first-run ] && ./first-run
		[ -x start ] && ./start
	)
	lockfile-remove --lock-name "$container_name".lock
}

tmpdir=$(mktemp -d)

for dir in $CONTAINER_PATH/*/
do
	build_depends $dir
done

rm -fr $tmpdir
