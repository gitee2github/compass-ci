#!/usr/bin/ruby
# frozen_string_literal: true

require 'set'
require '../lab.rb'

cci_src = ENV['CCI_SRC']
system "bash #{cci_src}/src/build"
system "mv #{cci_src}/src/m_scheduler ./scheduler"

sched_port = relevant_defaults(Set.new %w[SCHED_PORT])['SCHED_PORT']
system "docker build -t sch-ruby-a:v0.00d-#{sched_port} ."

system 'rm scheduler'
