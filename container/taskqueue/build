#!/usr/bin/env bash

[[ $CCI_SRC ]] || CCI_SRC=/c/cci

. $CCI_SRC/container/lab.sh

service_port=${TASKQUEUE_PORT:-3060}

if [[ ! -f "taskqueue" ]]; then
  DIR=$(realpath $0)
  service_dir=${DIR%/*}
  $CCI_SRC/container/compile_service $service_dir
fi

docker build -t taskqueue-alpine:v0.001-${service_port} .
