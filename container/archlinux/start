cmd=(
	docker run
	--restart=always
	-v archlinux-home:/home
	-v /etc/localtime:/etc/localtime:ro
	-v archlinux-root:/root
	-v /c:/c
	-v /srv/os:/srv/os
	-p 2202:2202
	--hostname archlinux
	--security-opt seccomp=unconfined
	-d
	archlinux:testbed
	/usr/sbin/sshd -D -p 2202
)

"${cmd[@]}"
