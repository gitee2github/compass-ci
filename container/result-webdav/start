. $CCI_SRC/container/defconfig.sh

docker_rm result-webdav

cmd=(
	docker run -d
	--name result-webdav
	--restart=always
	-p 3080:3080
	-v $PWD/nginx.conf:/usr/local/openresty/nginx/conf/nginx.conf
	-v /srv/result/:/srv/result/
	-v /srv/initrd/:/srv/initrd/
	result-webdav
)

"${cmd[@]}"
